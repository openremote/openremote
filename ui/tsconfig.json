{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "esNext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2017",
      "es2019",
      "es2021"
    ],
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "useDefineForClassFields": false
  }
}
