{
  "name": "OpenRemote DevContainer",
  "image": "mcr.microsoft.com/devcontainers/java:21",
  "workspaceFolder": "/workspaces/openremote",
  "remoteUser": "root",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true,
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/java:1": {
        "version": "21",
        "jdkDistro": "open",
        "installGradle": "true",
        "installGroovy": "true"
    },
    "ghcr.io/devcontainers/features/node:1": {}
  },
  "runArgs": [
    "-v", "${localEnv:HOME}/.gradle:/root/.gradle",
    "--dns", "8.8.8.8",
    "--dns", "8.8.4.4",
    "--network", "bridge",
    "--add-host", "host.docker.internal:host-gateway",
    "--ulimit", "nofile=65536:65536"
  ],
  "onCreateCommand": "echo 'devcontainer ready'",
  "postCreateCommand": "OR_HOSTNAME=localhost docker compose -p openremote -f /workspaces/openremote/profile/dev-testing.yml up --build -d",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "vscjava.vscode-java-pack",
        "vscjava.vscode-gradle",
        "vscjava.vscode-java-debug",
        "vscjava.vscode-java-test",
        "vscjava.vscode-java-dependency",
        "vscjava.vscode-maven",
        "visualstudioexptteam.vscodeintellicode",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "telemetry.enableTelemetry": false
      }
    }
  },
  "remoteEnv": {
    "GRADLE_USER_HOME": "/root/.gradle",
    "DOCKER_BUILDKIT": "1",
    "COMPOSE_DOCKER_CLI_BUILD": "1",
    "DOCKER_CLIENT_TIMEOUT": "120",
    "COMPOSE_HTTP_TIMEOUT": "120"
  }
}