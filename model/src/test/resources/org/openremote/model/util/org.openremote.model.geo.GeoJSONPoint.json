{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "title" : "Geo JSON Point",
  "type" : "object",
  "additionalProperties" : true,
  "properties" : {
    "type" : {
      "type" : "string",
      "enum" : [ "Point" ],
      "default" : "Point"
    },
    "coordinates" : {
      "$ref" : "#/definitions/Coordinate"
    }
  },
  "required" : [ "type" ],
  "definitions" : {
    "Coordinate" : {
      "type" : "object",
      "additionalProperties" : true,
      "properties" : {
        "x" : {
          "type" : "number"
        },
        "y" : {
          "type" : "number"
        },
        "z" : {
          "type" : "number"
        }
      },
      "required" : [ "x", "y", "z" ]
    }
  }
}