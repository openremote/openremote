{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "title" : "Geo JSON Point",
  "type" : "object",
  "properties" : {
    "coordinates" : {
      "type" : "object",
      "properties" : {
        "x" : {
          "type" : "number"
        },
        "y" : {
          "type" : "number"
        },
        "z" : {
          "type" : "number"
        }
      },
      "required" : [ "x", "y", "z" ],
      "additionalProperties" : true
    },
    "type" : {
      "const" : "Point",
      "default" : "Point"
    }
  },
  "additionalProperties" : true,
  "required" : [ "type" ]
}