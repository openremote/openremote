<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:ma="urn:import:gwt.material.design.addins.client">

    <ui:style>
        .contentPanel {
            background-color: lightgrey;
            color: black;
        }

        .footerPanel {
            background-color: lightslategray;
            color: black;
        }
    </ui:style>

    <ui:with field="constants" type="org.openremote.manager.client.i18n.ManagerConstants"/>
    <ui:with field="themeStyle" type="org.openremote.manager.client.ThemeStyle"/>

    <g:HeaderPanel>
        <g:HTMLPanel>
            <g:SimpleLayoutPanel ui:field="headerPanel" addStyleNames="{themeStyle.HeaderPanel}"/>
            <g:HTMLPanel addStyleNames="{themeStyle.HeaderHorizontalSeparator}"/>
        </g:HTMLPanel>
        <g:ResizeLayoutPanel width="100%" height="100%">
            <g:SplitLayoutPanel ui:field="bodyPanel">
                <g:west size="250">
                    <g:SimpleLayoutPanel ui:field="leftSidePanel" addStyleNames="{themeStyle.SidePanel}"/>
                </g:west>
                <g:center>
                    <g:SimpleLayoutPanel ui:field="contentPanel" addStyleNames="{style.contentPanel}"/>
                </g:center>
            </g:SplitLayoutPanel>
        </g:ResizeLayoutPanel>
    </g:HeaderPanel>

</ui:UiBinder>